<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AddCategoryActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/changePassToolBar4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/relativeToolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            tools:layout_editor_absoluteX="16dp">

            <ImageView
                android:id="@+id/addProductBackIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:foregroundGravity="center_vertical"
                android:src="@drawable/baseline_arrow_back" />

            <TextView
                android:id="@+id/titleToolBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="Add Category"
                android:textColor="@color/main"
                android:textSize="24dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="Category Name"
        android:textSize="20dp"
        android:textColor="@color/main"/>

    <EditText
        android:id="@+id/addCategoryEditText"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:inputType="text"
        android:background="@drawable/custom_input"
        android:layout_gravity="center"
        android:padding="10dp"
        android:hint="Category Name" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addCategoryBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:text="Add Category"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/updateCategoryBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:layout_gravity="center"
        android:text="Update Category"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/deleteCategoryBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button_second"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Delete Category"
        android:textColor="@color/white"
        android:visibility="gone"/>

</LinearLayout>