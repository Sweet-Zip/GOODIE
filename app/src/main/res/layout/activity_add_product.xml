<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context=".activity.AddProductActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/changePassToolBar2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/relativeToolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            tools:layout_editor_absoluteX="16dp">

            <ImageView
                android:id="@+id/addProductBackIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:foregroundGravity="center_vertical"
                android:src="@drawable/baseline_arrow_back" />

            <TextView
                android:id="@+id/titleToolBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="Add Prodcut"
                android:textColor="@color/main"
                android:textSize="24dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/addProductNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Product Name"
        android:textColor="@color/main"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/addProductNameEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_input"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="Product Name..."
        android:inputType="text" />

    <TextView
        android:id="@+id/addCategoryTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SelectCategory"
        android:textColor="@color/main"
        android:textSize="18dp"/>

    <Spinner
        android:id="@+id/addCategorySpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/addProductDetailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Product Detail"
        android:textColor="@color/main"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/addProductDetailEditText"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/custom_input"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Product Detail..."
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/productImageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Product Image"
        android:textColor="@color/main"
        android:textSize="18dp"/>

    <ImageView
        android:id="@+id/addProductImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/baseline_add_a_photo" />

    <TextView
        android:id="@+id/addPriceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Price"
        android:textColor="@color/main"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/addPriceEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_input"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:drawableStart="@drawable/baseline_attach_money_24"
        android:drawablePadding="5dp"
        android:hint="1.5"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/addProductBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_button"
        android:text="Add Product" />

</LinearLayout>