        android:supportsRtl="true"
        android:theme="@style/Theme.Goodie"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".activity.AddCategoryActivity"
            android:exported="false" />
        <activity
            android:name=".activity.AdminDetailActivity"
